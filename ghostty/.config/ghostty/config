theme = catppuccin-macchiato

font-size = 12
font-family = Iosevka Nerd Font Mono

background-opacity = 0.8
background-blur-radius = 20

macos-option-as-alt = true

window-decoration = false
confirm-close-surface = false

# Key bindings
# Split
keybind = ctrl+shift+o=new_split:right
keybind = ctrl+shift+e=new_split:down

# Select splits
keybind = ctrl+shift+l=goto_split:right
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+k=goto_split:top
keybind = ctrl+shift+j=goto_split:bottom

# Resize splits
keybind = alt+shift+equal=equalize_splits
keybind = alt+shift+l=resize_split:right,10
keybind = alt+shift+h=resize_split:left,10
keybind = alt+shift+k=resize_split:up,10
keybind = alt+shift+j=resize_split:down,10

# Window
keybind = ctrl+shift+n=new_window
keybind = alt+q=close_surface
