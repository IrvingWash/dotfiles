theme = catppuccin-macchiato

font-size = 18
font-family = Fira Code

background-opacity = 0.8
background-blur-radius = 20

macos-option-as-alt = true

window-decoration = false

# Key bindings
# Select splits
keybind = super+shift+l=goto_split:right
keybind = super+shift+h=goto_split:left
keybind = super+shift+k=goto_split:top
keybind = super+shift+j=goto_split:bottom

# Resize splits
keybind = alt+shift+equal=equalize_splits
keybind = alt+shift+l=resize_split:right,10
keybind = alt+shift+h=resize_split:left,10
keybind = alt+shift+k=resize_split:up,10
keybind = alt+shift+j=resize_split:down,10

# Window
keybind = super+w=close_window
keybind = alt+w=close_surface

# vim: ft=cfg
