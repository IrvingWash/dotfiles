font-size = 18
font-family = Iosevka Term

macos-option-as-alt = true
window-decoration = false
confirm-close-surface = false

# Key bindings
# Select splits
keybind = super+shift+i=goto_split:right
keybind = super+shift+m=goto_split:left
keybind = super+shift+e=goto_split:top
keybind = super+shift+n=goto_split:bottom
keybind = super+s=new_split:right
keybind = super+shift+s=new_split:down

# Resize splits
keybind = alt+shift+equal=equalize_splits
keybind = alt+shift+i=resize_split:right,10
keybind = alt+shift+m=resize_split:left,10
keybind = alt+shift+e=resize_split:up,10
keybind = alt+shift+n=resize_split:down,10

# Window
keybind = alt+w=close_surface

# vim: ft=cfg
